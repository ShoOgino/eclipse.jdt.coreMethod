//			expectingNoProblems();
		}
		
		System.gc();
		Thread.sleep(1000);
		
		AptConfig.setEnabled(jproj, true);
		start = System.currentTimeMillis();
		if (VERBOSE)
			System.out.println("APT enabled: starting full build");
		fullBuild( project.getFullPath() );
