/**
 * Ensures that an import declaration can be deleted.
 */
public void testDeleteImportDeclaration() throws CoreException {
	try {
		createFile(
			"P/X.java",
			"import java.util.*;\n" +
			"import q.Y;\n" +
			"public class X {\n" +
			"}"
		);
		ICompilationUnit cu = getCompilationUnit("P/X.java");
		IImportDeclaration imp= cu.getImport("q.Y");

		startDeltas();
		assertDeletion(imp);
		assertDeltas(
			"Unexpected delta",
			"P[*]: {CHILDREN}\n" + 
			"	<project root>[*]: {CHILDREN}\n" + 
			"		<default>[*]: {CHILDREN}\n" + 
			"			X.java[*]: {CHILDREN | FINE GRAINED}\n" + 
			"				[import container][*]: {CHILDREN | FINE GRAINED}\n" + 
			"					import q.Y[-]: {}"
		);
	} finally {
		stopDeltas();
		deleteFile("P/X.java");
	}
}

