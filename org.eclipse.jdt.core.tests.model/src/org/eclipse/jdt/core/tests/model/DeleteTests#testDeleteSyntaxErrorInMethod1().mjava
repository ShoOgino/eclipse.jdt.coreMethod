/**
 * Ensures that a method can be deleted if it contains syntax errors
 */
public void testDeleteSyntaxErrorInMethod1() throws CoreException {
	try {
		createFile(
			"P/X.java",
			"public class X {\n" +
			"  public void foo() {\n" +
			"    String s = ;\n" +
			"    System.out.println(s);\n" +
			"  }\n" +
			"}"
		);
		ICompilationUnit cu = getCompilationUnit("P/X.java");
		IMethod method = cu.getType("X").getMethod("foo", new String[] {});

		startDeltas();
		assertDeletion(method);
		assertDeltas(
			"Unexpected delta",
			"P[*]: {CHILDREN}\n" + 
			"	[project root][*]: {CHILDREN}\n" + 
			"		[default][*]: {CHILDREN}\n" + 
			"			X.java[*]: {CHILDREN | FINE GRAINED}\n" + 
			"				X[*]: {CHILDREN | FINE GRAINED}\n" + 
			"					foo[-]: {}"
		);
	} finally {
		stopDeltas();
		deleteFile("P/X.java");
	}
}

