/**
 * Ensures that all import declarations can be deleted, and the container
 * is reported as removed.
 */
public void testDeleteAllImports() throws CoreException {
	try {
		createFile(
			"P/X.java",
			"import java.util.*;\n" +
			"import q.Y;\n" +
			"public class X {\n" +
			"}"
		);
		ICompilationUnit cu = getCompilationUnit("P/X.java");
		IImportDeclaration[] children= cu.getImports();

		startDeltas();
		assertDeletion(children);
		assertDeltas(
			"Unexpected delta",
			"P[*]: {CHILDREN}\n" + 
			"	<project root>[*]: {CHILDREN}\n" + 
			"		<default>[*]: {CHILDREN}\n" + 
			"			X.java[*]: {CHILDREN | FINE GRAINED}\n" + 
			"				<import container>[-]: {}"
		);
	} finally {
		stopDeltas();
		deleteFile("P/X.java");
	}
}

