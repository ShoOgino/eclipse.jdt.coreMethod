		"						null)), null)),\r\n" + 
		"				null),\r\n" + 
		"			100);\r\n" + 
		"	}\r\n" + 
		"\r\n" + 
		"	void foo2() {\r\n" + 
		"		nestedMethodAAAA(\r\n" + 
		"			nestedMethodBBBB(\r\n" + 
		"				nestedMethodCCC(dddddd(200, 300, 400, 500, 600, 700, 800, 900)),\r\n" + 
		"				null));\r\n" + 
		"		nestedMethodAAAA(nestedMethodBBBB(\r\n" + 
		"			nestedMethodCCC(dddddd(200, 300, 400, 500, 600, 700, 800, 900)),\r\n" + 
		"			null));\r\n" + 
		"	}\r\n" + 
		"\r\n" + 
		"	void foo3() {\r\n" + 
		"		nestedMethodAAAA(\r\n" + 
		"			nestedMethodBBBB(\r\n" + 
		"				nestedMethodCCC(dddddd(200, 300, 400, 500, 600, 700, 800, 900)),\r\n" + 
		"				null),\r\n" + 
		"			null);\r\n" + 
		"		nestedMethodAAAA(nestedMethodBBBB(\r\n" + 
		"			nestedMethodCCC(dddddd(200, 300, 400, 500, 600, 700, 800, 900)),\r\n" + 
		"			null), null);\r\n" + 
		"	}\r\n" + 
		"}";
	formatSource(source,
		"class Snippet {\r\n" + 
		"\r\n" + 
		"	void foo1() {\r\n" + 
		"		Other.bar(\r\n" + 
		"			100,\r\n" + 
