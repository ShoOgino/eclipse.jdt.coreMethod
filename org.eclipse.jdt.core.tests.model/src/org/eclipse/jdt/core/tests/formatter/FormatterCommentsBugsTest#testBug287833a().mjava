/**
 * @bug 287833: [formatter] Formatter removes the first character after the * in the <pre> tag 
 * @see "https://bugs.eclipse.org/bugs/show_bug.cgi?id=287833"
 */
public void testBug287833a() {
	String source = 
		"public class test1 {\n" + 
	    "/**\n"+
	    "* <pre>\n"+
	    "*void foo() {\n"+
	    "*}\n"+
	    "* </pre>\n"+
	    "*/\n"+
	    "void foo() {\n"+
	    "}\n"+
	    "}\n";
	    
	formatSource(source, 
		"public class test1 {\n"+
	    "	/**\n"+
	    "	 * <pre>\n"+
	    "	 * void foo() {\n"+
	    "	 * }\n"+
	    "	 * </pre>\n"+
	    "	 */\n"+
	    "	void foo() {\n"+
	    "	}\n" +
	    "}\n");
}

