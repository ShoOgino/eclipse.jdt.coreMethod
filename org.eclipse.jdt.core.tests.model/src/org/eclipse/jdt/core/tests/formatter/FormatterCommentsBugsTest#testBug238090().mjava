	this.preferences.comment_line_length = 40;
	String source = 
		"package test.bugs;\n" + 
		"public class LongNameClass {\n" + 
		"/**\n" + 
		" * @see test.bugs.\n" + 
		" * LongNameClass#longNameMethod(java.lang.String)\n" + 
		" */\n" + 
		"public void foo() {\n" + 
		"}\n" + 
		"\n" + 
		"void longNameMethod(String str) {\n" + 
		"}\n" + 
		"}\n";
	formatSource(source,
		"package test.bugs;\n" + 
		"\n" + 
		"public class LongNameClass {\n" + 
		"	/**\n" + 
		"	 * @see test.bugs.\n" + 
