/**
 * https://bugs.eclipse.org/497245 - [formatter] Comment between "if" and statement breaks formatting
 */
public void testBug497245b() {
	this.formatterPrefs.keep_then_statement_on_same_line = true;
	String source =
		"public class Test {\r\n" + 
		"	void method() {\r\n" + 
		"		if (true)\r\n" + 
		"			// comment\r\n" + 
		"			if (false) method();\r\n" + 
		"	}\r\n" + 
		"}";
	formatSource(source);
}

