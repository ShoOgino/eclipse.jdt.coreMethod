		buf.append("    }\n");
		buf.append("}\n");
		buf.append("interface F extends Runnable {\n");
		buf.append("    private abstract void newFoo(String str);\n");
		buf.append("}\n");
		buf.append("class G extends Object {\n");
		buf.append("}\n");
		assertEqualString(preview, buf.toString());

	}

