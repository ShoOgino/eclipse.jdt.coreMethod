    public String toString()
    {
        if (isUNumber())
            {
                return "U" + Integer.toString(getInt());
            }
        else if (isIsoBase())
            {
                return "I" + Integer.toString(getInt());
            }
        else if (kind == WORD)
            {
                return word;
            }
        else if (kind == CHAR)
            {
                return new Character(c).toString();
            }
        else if (kind == ZONE || kind == DAYZONE)
            {
                return zone.getID();
            }
        else
            {
                return "(" + kind + "," + getInt() + ")";
            }
    }

