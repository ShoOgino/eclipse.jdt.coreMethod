	/**
	 * Return the path for a minimal Java Class Library
	 * Minimal Jar contain :
	 * java.io
	 *     Serializable.java
	 * java.lang
	 *     Boolean.java
	 *     Byte.java
	 *     Character.java
	 *     Class.java
	 *     ClassNotFoundException.java
	 *     CloneNotSupportedException.java
	 *     Double.java
	 *     Error.java
	 *     Exception.java
	 *     Float.java
	 *     Integer.java
	 *     InterruptedException.java
	 *     LinkageError.java
	 *     Long.java
	 *     NoClassDefFoundError.java
	 *     Number.java
	 *     Object.java
	 *     RuntimeException.java
	 *     Short.java
	 *     String.java
	 *     StringBuffer.java
	 *     Throwable.java
	 */
	public String getMinimalJarPath(){
		String dir = System.getProperty("user.dir").toLowerCase();
		int index = dir.indexOf("program");
		CodeSource javaCoreCodeSource =
			JavaCore.class.getProtectionDomain().getCodeSource();
		if (javaCoreCodeSource != null) {
			URL javaCoreUrl = javaCoreCodeSource.getLocation();
			String javaCorePath = javaCoreUrl.getFile();
			index = javaCorePath.indexOf(JavaCore.PLUGIN_ID);
			if (index != -1) {
				String pluginsPath = javaCorePath.substring(0, index);
				dir =
					pluginsPath
						+ testProjectName
						+ java.io.File.separator
						+ "minimal.jar";
			}
		}

		return dir;
	}

