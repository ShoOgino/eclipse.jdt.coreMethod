	public static void zip(File rootDir, String zipPath, FileFilter filter)
		throws IOException
	{
		ZipOutputStream zip = null;
		try
		{
			zip = new ZipOutputStream( new FileOutputStream( zipPath ) );
			// +1 for last slash
			zip( rootDir, zip, rootDir.getPath().length() + 1, filter ); 
		}
		finally
		{
			if( zip != null )
			{
				zip.close();
			}
		}
	}

