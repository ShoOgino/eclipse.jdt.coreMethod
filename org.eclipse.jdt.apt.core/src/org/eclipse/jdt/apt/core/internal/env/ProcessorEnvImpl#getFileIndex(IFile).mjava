    /**
     * @param file
     * @return the index of <code>file</code> from the list of files we are processing.
     * Return -2 if no match is found.
     */
    private int getFileIndex(final IFile file)
    {
    	int index = -2;
    	for( int i=0, len=_files.length; i<len; i++ ){
    		if( file == _files[i] ){
    			index = i;
    			break;
    		}    	
    	}
    	return index;
    }

