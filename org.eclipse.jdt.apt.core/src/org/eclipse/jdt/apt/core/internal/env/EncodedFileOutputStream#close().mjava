	@Override
	public void close() throws IOException {
		super.close();
		if (_charsetName != null) {
			try {
				_file.setCharset(_charsetName, null);
			}
			catch (CoreException ce) {
				IOException ioe = new IOException("Could not set charset: " + _charsetName); //$NON-NLS-1$
				ioe.initCause(ce);
				throw ioe;
			}
		}
	}

