	public SourcePositionImpl(final int startingOffset,
							  final int length,
							  final int line,
							  final int column,
							  final AnnotationMirrorImpl decl )
	{
		_startingOffset = startingOffset;
        _length = length;
        _line = line < 1 ? 1 : line;
        _column = column < 0 ? 0 : column;
        _decl = decl;
        assert decl != null : "missing declaration [decl] == null."; //$NON-NLS-1$
	}

