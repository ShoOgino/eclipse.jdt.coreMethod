        _env = env;
		_annotated = annotated;
        assert _expr != null : "expr == null";
        assert _env != null : "missing environment";
		assert _annotated != null : "missing declaration";  
        _value = Factory.createAnnotationValueObject(expr, annotated, env);      
    }

