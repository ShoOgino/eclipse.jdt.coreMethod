    public String getDocComment()
    {
        if( isFromSource()){
			final BodyDeclaration bodyDecl = (BodyDeclaration)getAstNode();
			if( bodyDecl != null ){
				final Javadoc javaDoc = bodyDecl.getJavadoc();
	            if( javaDoc == null ) return "";
	            return javaDoc.toString();
			}
			return "";
        }
        return null;

    }

