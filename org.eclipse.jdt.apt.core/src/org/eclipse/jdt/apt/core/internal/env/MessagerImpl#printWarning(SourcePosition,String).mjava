    public void printWarning(SourcePosition pos, String msg)
    {		
        if( pos instanceof SourcePositionImpl )
            print((SourcePositionImpl)pos, APTProblem.Severity.Warning, msg);
		else if (pos == null )
			printWarning(msg); 
		else
    		print(pos, APTProblem.Severity.Warning, msg);
    }

