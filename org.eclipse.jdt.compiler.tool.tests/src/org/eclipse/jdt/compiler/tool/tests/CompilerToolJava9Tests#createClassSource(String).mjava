	private File createClassSource(String source) {
		String tmpFolder = System.getProperty("java.io.tmpdir");
		File inputFile = new File(tmpFolder, "X.java");
		Writer writer = null;
		try {
			writer = new FileWriter(inputFile);
			writer.write(source);
			writer.close();
			return inputFile;
		} catch (IOException e) {
			throw new RuntimeException(e);
		} finally {
			if (writer != null) {
				try {
					writer.close();
				} catch (IOException e) {
					// ignore
				}
			}
		}
	}

