	public void testSimpleExpressions() {
		runConformTest(
			new String[] {
				"X.java",
				"public class X {\n" +
				"	static int twice(int i) {\n" +
				"		int tw = switch (i) {\n" +
				"			case 0 -> 0;\n" +
				"			case 1 -> 2;\n" +
				"			default -> i * 2;\n" +
				"		};\n" +
				"		return tw;\n" +
				"	}\n" +
				"	public static void main(String... args) {\n" +
				"		System.out.print(twice(3));\n" +
				"	}\n" +
				"}\n"
			},
			"6");
	}

