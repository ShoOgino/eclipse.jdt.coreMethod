	// null analysis -- while
	public void test0116_while() {
		this.runNegativeTest(
			new String[] {
				"X.java",
				"public class X {\n" + 
				"	 boolean bar() {\n" + 
				"		 return true;\n" + 
				"	 }\n" + 
				"	 void foo(Object o) {\n" + 
				"		 while (bar() && o == null) {\n" + 
				"		   o.toString();\n" + // complain: NPE
				"		   o = new Object();\n" +
				"		 }\n" + 
				"	 }\n" + 
				"}\n"},
			"----------\n" + 
			"1. WARNING in X.java (at line 7)\n" + 
			"	o.toString();\n" + 
			"	^\n" + 
			"The variable o can only be null; it was either set to null or checked for null when last used\n" + 
			"----------\n"
		);
	}

