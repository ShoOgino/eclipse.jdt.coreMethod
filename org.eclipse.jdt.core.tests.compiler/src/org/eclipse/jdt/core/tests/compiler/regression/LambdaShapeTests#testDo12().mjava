		new String[] {
			"X.java",
			"interface I {\n" +
			"	String foo();\n" +
			"}\n" +
			"interface J {\n" +
			"	void foo();\n" +
			"}\n" +
			"public class X {\n" +
			"	static void goo(I i) {\n" +
			"		System.out.println(\"I\");\n" +
			"	}\n" +
			"	public static void main(String[] args) {\n" +
			"		goo(() -> {\n" +
			"			do {\n" +
			"               if (true) \n" +
			"				    continue;\n" +
			"               else \n" +
			"                   throw new RuntimeException();\n" +
			"			} while (false);\n" +
			"		});\n" +
			"	}\n" +
			"}\n"
