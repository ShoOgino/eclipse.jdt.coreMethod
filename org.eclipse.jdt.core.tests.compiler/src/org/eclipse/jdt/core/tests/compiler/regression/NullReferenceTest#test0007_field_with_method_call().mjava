	// null analysis -- field
	public void test0007_field_with_method_call() {
		this.runNegativeTest(
			new String[] {
				"X.java",
				"public class X {\n" + 
				"	 static Object o;\n" + 
				"	 void foo() {\n" + 
				"		 o = null;\n" + 
				"		 bar();\n" + 
				"		 o.toString();\n" + 
				"	 }\n" + 
				"	 void bar() {\n" + 
				"	 }\n" + 
				"}\n"},
			"" // still ok because this may place a static call upon X
		);
	}

