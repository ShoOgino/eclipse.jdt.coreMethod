 */
public void enterClass(
	int declarationStart, 
	int modifiers, 
	char[] name, 
	int nameSourceStart, 
	int nameSourceEnd, 
	char[] superclass, 
	char[][] superinterfaces,
	char[][] typeParameterNames,
	char[][][] typeParameterBounds) {

	if (currentType == null) {
		// top level type
		currentType = 
			new SourceType(
				null, 
				declarationStart, 
				modifiers, 
				name, 
				nameSourceStart, 
				nameSourceEnd, 
				superclass, 
				superinterfaces, 
				source); 
		currentType.setPackage(currentPackage);
		setImports();
	} else {
		// member type
		SourceType memberType;
		currentType.addMemberType(
			memberType = 
				new SourceType(
					currentType.getName(), 
					declarationStart, 
					modifiers, 
					name, 
					nameSourceStart, 
					nameSourceEnd, 
					superclass, 
					superinterfaces, 
					source)); 
		memberType.parent = currentType;
		currentType = memberType;
	}
}

