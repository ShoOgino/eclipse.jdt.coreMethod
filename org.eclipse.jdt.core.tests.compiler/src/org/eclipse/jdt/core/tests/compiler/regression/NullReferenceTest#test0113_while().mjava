	// null analysis -- while
	public void test0113_while() {
		this.runNegativeTest(
			new String[] {
				"X.java",
				"public class X {\n" + 
				"	 void foo() {\n" + 
				"		 Object o = null;\n" + 
				"		 while (o == null) {\n" + 
				      // silent: first iteration is sure to find it null, 
				      // but other iterations may change it 
				"		   o = new Object();\n" + 
				"		 }\n" + 
				"	 }\n" + 
				"}\n"},
			""  
		);
	}

