	runNegativeTest(
		new String[] { /* test files */
			"X.java",
			"public class X {\n" + 
			"	public Object[] foo() {\n" + 
			"		Object[] i, j= new Object[0];\n" + 
			"		i= j = null;\n" + 
			"		i= (new Object[] { null, null });\n" + 
			"		return j;\n" + 
			"	}\n" + 
			"}", // =================
		},
		"----------\n" + 
		"1. ERROR in X.java (at line 3)\n" + 
		"	Object[] i, j= new Object[0];\n" + 
		"	         ^\n" + 
		"The value of the local variable i is not used\n" + 
		"----------\n",
		null /* no class libraries */,
		true,
		options /* custom options */);
}

