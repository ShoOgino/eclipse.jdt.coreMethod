	// TODO (maxime) fix
	public void _test0111_while() {
		this.runNegativeTest(
			new String[] {
				"X.java",
				"public class X {\n" + 
				"	 void foo() {\n" + 
				"		 Object o = null;\n" + 
				"		 while (o.toString() != null) {/* */}\n" +
				      // complain: NPE
				"	 }\n" + 
				"}\n"},
			"----------\n" + 
			"1. WARNING in X.java (at line 4)\n" + 
			"	while (o.toString() != null) {/* */}\n" + 
			"	       ^\n" + 
			"The variable o can only be null; it was either set to null or checked for null when last used\n" + 
			"----------\n"  
		);
	}
