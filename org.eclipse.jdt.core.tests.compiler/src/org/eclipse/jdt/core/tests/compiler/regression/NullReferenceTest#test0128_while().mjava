	// null analysis -- while
	public void test0128_while() {
		this.runNegativeTest(
			new String[] {
				"X.java",
				"public class X {\n" + 
				"	 boolean dummy;\n" + 
				"	 void foo() {\n" + 
				"		 Object o = null;\n" + 
				"		 while (dummy) {\n" + 
				"		   // o = new Object();\n" + 
				"		 }\n" + 
				"		 o.toString();\n" + 
				"	 }\n" + 
				"}\n"},
			"----------\n" + 
			"1. WARNING in X.java (at line 8)\n" + 
			"	o.toString();\n" + 
			"	^\n" + 
			"The variable o can only be null; it was either set to null or checked for null when last used\n" + 
			"----------\n" 
		);
	}

