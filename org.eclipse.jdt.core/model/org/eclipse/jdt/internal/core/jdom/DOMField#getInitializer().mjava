	/**
	 * @see IDOMField#getInitializer()
	 */
	public String getInitializer() {
		becomeDetailed();
		if (hasInitializer()) {
			if (fInitializer != null) {
				return fInitializer;
			} else {
				return CharArrayOps.substring(
					fDocument,
					fInitializerRange[0],
					fInitializerRange[1] + 1 - fInitializerRange[0]);
			}
		} else {
			return null;
		}
	}

