/**
 * Returns the entire contents of the buffer as one
 * char[] or null if nothing has been put in the buffer.
 */
public char[] getContents() {
	if (end == 0)
		return null;

	// determine the length of the array
	int length = 0;
	for (int i = 0; i < end; i++)
		length += ranges[i][1];

	if (length > 0) {
		char[] result = new char[length];
		int current = 0;
		// copy the results
		for(int i = 0; i < end; i++) {
			int[] range = ranges[i];
			int length2 = range[1];
			System.arraycopy(buffer[i], range[0], result, current, length2);
			current += length2;
		}
		return result;
	}
	return null;
}

