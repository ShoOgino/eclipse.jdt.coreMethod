	/**
	 * Dumps the given array.
	 * Prints a maximum of maxPerLine items per line.
	 */
	public void dump(String[] val, int maxPerLine) {
		int len = val.length;
		boolean oneLine = (len <= maxPerLine);
		if (!oneLine) {
			++fTabLevel;
		}
		fWriter.print("[");
		boolean newLine = !oneLine;
		for (int i = 0; i < len; ++i) {
			if (newLine) {
				fWriter.println();
				tabIfNeeded();
			}
			fWriter.print("\"" + val[i] + "\"");
			if (i + 1 < len) {
				fWriter.print(", ");
			}
			newLine = (i != 0 && (i % maxPerLine) == 0);
		}
		fWriter.print("]");
		if (oneLine || newLine) {
			fWriter.println();
		}
		if (!oneLine) {
			--fTabLevel;
		}
	}

