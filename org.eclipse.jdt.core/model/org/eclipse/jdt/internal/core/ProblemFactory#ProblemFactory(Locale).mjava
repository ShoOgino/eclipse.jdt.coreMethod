	/**
	 * @param loc the locale used to get the right message
	 */
	public ProblemFactory(Locale loc) {
		locale = loc;
		compilerResources =
			ResourceBundle.getBundle(
				"org.eclipse.jdt.internal.compiler.problem.Messages",
				loc);
		//$NON-NLS-1$
		initializeMessageTemplates();
	}

