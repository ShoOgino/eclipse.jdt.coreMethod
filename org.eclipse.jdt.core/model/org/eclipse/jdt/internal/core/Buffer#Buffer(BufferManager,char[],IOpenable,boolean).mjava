	/**
	 * Creates a new buffer without an underlying resource.
	 */
	protected Buffer(
		BufferManager manager,
		char[] contents,
		IOpenable owner,
		boolean readOnly) {
		fManager = manager;
		fFile = null;
		fContents = contents;
		fOwner = owner;
		fFlags |= F_HAS_UNSAVED_CHANGES;
		setReadOnly(readOnly);
	}

