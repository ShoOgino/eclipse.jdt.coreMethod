	/** 
	 * Add pool constants for the build context.
	 */
	protected void addBuildContextToPool(
		IState state,
		StateSnapConstantPool pool) {
		IImageContext ctx = state.getBuildContext();
		if (ctx != null) {
			IPackage[] pkgs = ctx.getPackages();
			for (int i = 0; i < pkgs.length; ++i) {
				pool.add(pkgs[i]);
			}
		}
	}

