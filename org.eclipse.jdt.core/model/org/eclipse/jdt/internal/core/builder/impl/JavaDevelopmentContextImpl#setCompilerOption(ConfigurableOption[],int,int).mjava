	/**
	 * Sets a compiler option.  This seems awkward.
	 */
	protected static void setCompilerOption(
		ConfigurableOption[] options,
		int optionID,
		int valueIndex) {
		for (int i = 0; i < options.length; i++) {
			if (options[i].getID() == optionID) {
				options[i].setValueIndex(valueIndex);
				return;
			}
		}
	}

