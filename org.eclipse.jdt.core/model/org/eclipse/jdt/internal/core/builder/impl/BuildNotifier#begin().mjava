public void begin() {
	if (fBuildMonitor != null) {
		fBuildMonitor.beginBuild(fIsBatch ? Util.bind("build.beginBatch"/*nonNLS*/) : Util.bind("build.beginIncremental"/*nonNLS*/));
	}
	if (fProgress != null) {
		fProgress.beginTask(""/*nonNLS*/, fTotalWork);
	}
	this.previousSubtask = null;
}

