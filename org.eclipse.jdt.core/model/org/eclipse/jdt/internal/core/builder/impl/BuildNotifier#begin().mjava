public void begin() {
	if (fBuildMonitor != null) {
		fBuildMonitor.beginBuild(fIsBatch ? Util.bind("build.beginBatch") : Util.bind("build.beginIncremental")); //$NON-NLS-2$ //$NON-NLS-1$
	}
	if (fProgress != null) {
		fProgress.beginTask("", fTotalWork); //$NON-NLS-1$
	}
	this.previousSubtask = null;
}

