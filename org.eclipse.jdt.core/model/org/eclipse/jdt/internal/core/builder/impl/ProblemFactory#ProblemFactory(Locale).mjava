	/**
	 * Creates a problem factory for the given locale.
	 */
	private ProblemFactory(Locale locale) {
		fLocale = locale;
		fCompilerResources =
			ResourceBundle.getBundle(
				"org.eclipse.jdt.internal.compiler.problem.Messages",
				locale);
		//$NON-NLS-1$
		initializeMessageTemplates();
	}

