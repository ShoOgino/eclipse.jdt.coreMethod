	/** 
	 * Read a type handle.
	 * Allow null if allowNull is true.
	 */
	IType readTypeHandle(
		StateSnapConstantPool pool,
		DataInputStream in,
		boolean allowNull)
		throws IOException {
		int index = in.readInt();
		if (index == 0) {
			if (!allowNull)
				badFormat();
			return null;
		}
		return pool.getType(index);
	}

