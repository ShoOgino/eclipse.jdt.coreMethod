/** 
 * Add an IPath to the pool.
 */
public void add(IPath path) {
	if (!fSet.includes(path)) {
		// Special handling needed to preserve device
		if (path.isRoot()) {
			fSet.put(path.toString());
		} else {
			IPath parent = path.removeLastSegments(1);
			add(parent);
			fSet.put(path.lastSegment());
		}
		fSet.put(path);
	}
}

