/**
 * @see IBuffer
 */
public void setContents(char[] contents) {
	if (!isReadOnly()) {
		String string = null;
		if (contents != null) {
			string = new String(contents);
		}
		BufferChangedEvent event = new BufferChangedEvent(this, 0, this.getLength(), string);
		synchronized (fLock) {
			fContents = contents;
			fFlags |= F_HAS_UNSAVED_CHANGES;
			fGapStart = -1;
			fGapEnd = -1;
		}
		notifyChanged(event);
	}
}

