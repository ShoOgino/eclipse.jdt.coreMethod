	/**
	 * Remove all markers denoting classpath problems
	 */
	protected void flushClasspathProblemMarkers() {

		try {
			IProject project = getProject();
			if (project.exists()) {
				project.deleteMarkers(
					IJavaModelMarker.BUILDPATH_PROBLEM_MARKER,
					false,
					IResource.DEPTH_ONE);
			}
		} catch (CoreException e) {
		}
	}

