	 */
	public IDOMCompilationUnit createCompilationUnit(
		char[] sourceCode,
		String name) {
		if (sourceCode == null) {
			return null;
		}
		return (new SimpleDOMBuilder()).createCompilationUnit(
			sourceCode,
			name.toCharArray());
	}

