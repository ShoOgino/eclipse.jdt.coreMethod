	private int getLength(String s, int tabDepth) {
		int length = 0;
		for (int i = 0; i < tabDepth; i++) {
			length += options.tabSize;
		}
		for (int i = 0, max = s.length(); i < max; i++) {
			char currentChar = s.charAt(i);
			switch (currentChar) {
				case '\t' :
					length += options.tabSize;
					break;
				default :
					length++;
			}
		}
		return length;
	}

