	/*
	 * @see Reader#read()
	 */
	public int read() throws IOException {
		int c;
		do {

			c= nextChar();
			while (!this.fReadFromBuffer && c != -1) {
				String s= computeSubstitution(c);
				if (s == null)
					break;
				if (s.length() > 0)
					this.fBuffer.insert(0, s);
				c= nextChar();
			}

		} while (this.fSkipWhiteSpace && this.fWasWhiteSpace && (c == ' '));
		this.fWasWhiteSpace= (c == ' ' || c == '\r' || c == '\n');
		return c;
	}

