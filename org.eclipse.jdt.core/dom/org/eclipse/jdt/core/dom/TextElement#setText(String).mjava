	/**
	 * Sets the text of this node to the given value.
	 * 
	 * @param text the text of this node
	 * @exception IllegalArgumentException if the text is null
	 */ 
	public void setText(String text) {
		if (text == null) {
			throw new IllegalArgumentException();
		}
		modifying();
		this.text = text;
	}

