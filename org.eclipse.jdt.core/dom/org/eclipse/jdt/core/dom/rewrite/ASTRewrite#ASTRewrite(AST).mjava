	/**
	 * Creates a new AST rewrite for the given AST.
	 * 
	 * @param ast the AST being rewritten
	 */
	public ASTRewrite(AST ast) {
		this.ast= ast;
		this.eventStore= new RewriteEventStore();
		this.nodeStore= new NodeInfoStore(ast);
	}

