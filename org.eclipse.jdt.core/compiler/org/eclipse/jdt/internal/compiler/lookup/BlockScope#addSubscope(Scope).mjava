private void addSubscope(Scope childScope) {
	if (scopeIndex == subscopes.length)
		System.arraycopy(subscopes, 0, (subscopes = new Scope[scopeIndex * 2]), 0, scopeIndex);
	subscopes[scopeIndex++] = childScope;
}
