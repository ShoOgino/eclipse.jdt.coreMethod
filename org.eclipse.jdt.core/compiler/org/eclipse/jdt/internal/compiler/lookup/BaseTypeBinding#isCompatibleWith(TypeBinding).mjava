	final boolean isCompatibleWith(TypeBinding right) {
		if (this == right)
			return true;
		if (!right.isBaseType())
			return this == NullBinding;

		switch (right.id) {
			case T_boolean :
			case T_byte :
			case T_char :
				return false;
			case T_double :
				switch (id) {
					case T_byte :
					case T_char :
					case T_short :
					case T_int :
					case T_long :
					case T_float :
						return true;
					default :
						return false;
				}
			case T_float :
				switch (id) {
					case T_byte :
					case T_char :
					case T_short :
					case T_int :
					case T_long :
						return true;
					default :
						return false;
				}
			case T_long :
				switch (id) {
					case T_byte :
					case T_char :
					case T_short :
					case T_int :
						return true;
					default :
						return false;
				}
			case T_int :
				switch (id) {
					case T_byte :
					case T_char :
					case T_short :
						return true;
					default :
						return false;
				}
			case T_short :
				return (id == T_byte);
		}
		return false;
	}

