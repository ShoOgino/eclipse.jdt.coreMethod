public CategorizedProblem createProblem(
	char[] originatingFileName, 
	int problemId, 
	String[] problemArguments,
	int elaborationId,
	String[] messageArguments, 
	int severity, 
	int startPosition, 
	int endPosition, 
	int lineNumber,
	int columnNumber) {
	return new DefaultProblem(
		originatingFileName, 
		this.getLocalizedMessage(problemId, elaborationId, messageArguments),
		problemId, 
		problemArguments, 
		severity, 
		startPosition, 
		endPosition, 
		lineNumber,
		columnNumber); 
}

