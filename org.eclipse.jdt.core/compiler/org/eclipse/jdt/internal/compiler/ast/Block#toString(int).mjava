public String toString(int tab) {
	/* slow code */

	String s = tabString(tab);
	if (this.statements == null) {
		s += "{\n";
		s += tabString(tab);
		s += "}";
		return s;
	}

	//	s = s + (explicitDeclarations != 0
	//				? " { // ---scope needed for "+String.valueOf(explicitDeclarations) +" locals------------ \n"
	//				: "{// ---NO scope needed------ \n") ;

	s += "{\n";
	s += this.toStringStatements(tab);
	s += tabString(tab);
	s += "}";
	return s;
}

