	public String toString(int tab) {
		/* slow code */

		String s = tabString(tab);
		s = s + "while (" + condition.toStringExpression() + ")";
		if (action == null)
			s = s + " {} ;";
		else
			if (action instanceof Block)
				s = s + "\n" + action.toString(tab + 1);
			else
				s = s + " {\n" + action.toString(tab + 1) + "}";
		return s;
	}

