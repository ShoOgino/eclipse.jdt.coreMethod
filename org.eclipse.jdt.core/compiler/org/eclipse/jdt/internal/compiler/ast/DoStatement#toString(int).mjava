public String toString(int tab) {
	/* slow code */

	String inFront, s = tabString(tab);
	inFront = s;
	s = s + "do"/*nonNLS*/;
	if (action == null)
		s = s + " {}\n"/*nonNLS*/;
	else
		if (action instanceof Block)
			s = s + "\n"/*nonNLS*/ + action.toString(tab + 1) + "\n"/*nonNLS*/;
		else
			s = s + " {\n"/*nonNLS*/ + action.toString(tab + 1) + ";}\n"/*nonNLS*/;
	s = s + inFront + "while ("/*nonNLS*/ + condition.toStringExpression() + ")"/*nonNLS*/;
	return s;
}

