public String toString(int tab) {
	/* slow code */

	String inFront, s = tabString(tab);
	inFront = s;
	s = s + "do";
	if (action == null)
		s = s + " {}\n";
	else
		if (action instanceof Block)
			s = s + "\n" + action.toString(tab + 1) + "\n";
		else
			s = s + " {\n" + action.toString(tab + 1) + ";}\n";
	s = s + inFront + "while (" + condition.toStringExpression() + ")";
	return s;
}

