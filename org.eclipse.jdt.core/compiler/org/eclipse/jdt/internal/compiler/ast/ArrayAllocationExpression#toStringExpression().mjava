public String toStringExpression() {
	/* slow code */

	String s = "new " + type.toString(0);
	for (int i = 0 ; i < dimensions.length ; i++)
	{	if (dimensions[i] == null)
			s = s + "[]";
		else
			s = s + "[" + dimensions[i].toStringExpression() + "]" ;}
	if (initializer != null)
		s = s + initializer.toStringExpression();
	return s;}

