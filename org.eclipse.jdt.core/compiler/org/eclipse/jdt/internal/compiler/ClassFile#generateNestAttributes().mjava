	private int generateNestAttributes() {
		int nAttrs = 0;
		TypeDeclaration typeDeclaration = this.referenceBinding.scope.referenceContext;
		TypeDeclaration topType = getTopLevelType(typeDeclaration);
		if (topType == typeDeclaration) { // indeed the top type - add members
			nAttrs += generateNestMembersAttribute(typeDeclaration);
		} else {
			nAttrs += generateNestHostAttribute(topType.binding);
			topType.addNestedMembers(typeDeclaration.binding.constantPoolName());
		}
		return nAttrs;
	}

