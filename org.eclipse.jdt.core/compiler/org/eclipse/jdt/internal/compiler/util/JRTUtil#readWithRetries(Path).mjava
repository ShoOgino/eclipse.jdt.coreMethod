	public static byte[] readWithRetries(Path path) throws IOException, ClosedByInterruptException {
		int attempt = 0;
		while (true) {
			try {
				return Files.readAllBytes(path);
			} catch(ClosedByInterruptException e) {
				if (attempt++ < 10)
					continue;
				throw e;
			} catch (NoSuchFileException e) {
				return null;
			}
		}
	}

