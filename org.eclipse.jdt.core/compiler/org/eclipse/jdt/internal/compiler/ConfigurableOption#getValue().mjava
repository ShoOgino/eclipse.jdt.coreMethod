	/**
	* Answer the value of the current setting for this particular option.
	*
	* @return String
	*/
	public String getValue() {
		if(possibleValues == NoDiscreteValue){
			if (value == null)
				return getDefaultValue();
			return value;
		}
		else {
			if (valueIndex == -1)
				return getDefaultValue();
			return possibleValues[valueIndex];
		}
	}

