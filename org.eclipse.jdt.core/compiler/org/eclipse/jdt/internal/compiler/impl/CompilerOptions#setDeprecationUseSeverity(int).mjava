public void setDeprecationUseSeverity(int flag) {
	errorThreshold &= ~UsingDeprecatedAPI;
	warningThreshold &= ~UsingDeprecatedAPI;
	switch(flag){
		case ERROR : 
			errorThreshold |= UsingDeprecatedAPI;
			break;
		case WARNING : 
			warningThreshold |= UsingDeprecatedAPI;
			break;
	}
}

