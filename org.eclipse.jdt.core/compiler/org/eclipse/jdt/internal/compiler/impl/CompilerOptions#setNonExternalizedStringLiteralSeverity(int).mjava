public void setNonExternalizedStringLiteralSeverity(int flag) {
	errorThreshold &= ~NonExternalizedString;
	warningThreshold &= ~NonExternalizedString;
	switch(flag){
		case ERROR : 
			errorThreshold |= NonExternalizedString;
			break;
		case WARNING : 
			warningThreshold |= NonExternalizedString;
			break;
	}	
}

