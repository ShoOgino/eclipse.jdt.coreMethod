public void setUnusedLocalVariableSeverity(int flag) {
	errorThreshold &= ~UnusedLocalVariable;
	warningThreshold &= ~UnusedLocalVariable;
	switch(flag){
		case Error : 
			errorThreshold |= UnusedLocalVariable;
			break;
		case Warning : 
			warningThreshold |= UnusedLocalVariable;
			break;
	}
}

