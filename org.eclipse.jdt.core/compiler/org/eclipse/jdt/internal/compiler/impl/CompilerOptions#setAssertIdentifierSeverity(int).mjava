public void setAssertIdentifierSeverity(int flag) {
	errorThreshold &= ~AssertUsedAsAnIdentifier;
	warningThreshold &= ~AssertUsedAsAnIdentifier;
	switch(flag){
		case ERROR : 
			errorThreshold |= AssertUsedAsAnIdentifier;
			break;
		case WARNING : 
			warningThreshold |= AssertUsedAsAnIdentifier;
			break;
	}	
}

