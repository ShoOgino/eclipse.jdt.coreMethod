public final void writeSignedShort(int pos, int b) {
	int currentOffset = startingClassFileOffset + pos;
	try {
		bCodeStream[currentOffset] = (byte) (b >> 8);
	} catch (IndexOutOfBoundsException e) {
		resizeByteArray();
		bCodeStream[currentOffset] = (byte) (b >> 8);
	}
	try {
		bCodeStream[currentOffset + 1] = (byte) b;
	} catch (IndexOutOfBoundsException e) {
		resizeByteArray();
		bCodeStream[currentOffset + 1] = (byte) b;
	}
}

