/**
 * Resize the pool contents
 */
private final void resizePoolContents(int minimalSize) {
    int length = poolContent.length;
    int toAdd = length;
    if (toAdd < minimalSize)
        toAdd = minimalSize;
    System.arraycopy(poolContent, 0, poolContent = new byte[length + toAdd], 0, length);
}

