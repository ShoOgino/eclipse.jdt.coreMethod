	final public void bipush(byte b) {
		countLabels = 0;
		stackDepth++;
		if (stackDepth > stackMax)
			stackMax = stackDepth;
		try {
			position++;
			bCodeStream[classFileOffset++] = OPC_bipush;
		} catch (IndexOutOfBoundsException e) {
			resizeByteArray(OPC_bipush);
		}
		writeSignedByte(b);
	}

