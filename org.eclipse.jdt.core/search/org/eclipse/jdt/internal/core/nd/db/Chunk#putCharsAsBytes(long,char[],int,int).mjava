	public void putCharsAsBytes(final long offset, char[] chars, int start, int len) {
		assert this.fLocked;
		this.fDirty= true;
		int idx= recPtrToIndex(offset)-1;
		final int end= start + len;
		for (int i = start; i < end; i++) {
			char value= chars[i];
			this.fBuffer[++idx]= (byte) (value);
		}
	}

