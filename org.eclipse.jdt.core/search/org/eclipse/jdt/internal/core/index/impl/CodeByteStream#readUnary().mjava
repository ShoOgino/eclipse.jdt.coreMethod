	/**
	 *  Reads a value in unary.
	 */
	public int readUnary() {
		int value = 1;
		int mask = 1 << (7 - bitOffset);
		while ((bytes[byteOffset] & mask) != 0) {
			++value;
			if (++bitOffset >= 8) {
				bitOffset = 0;
				++byteOffset;
				mask = 0x80;
			} else {
				mask >>>= 1;
			}
		}
		// skip the 0 bit
		if (++bitOffset >= 8) {
			bitOffset = 0;
			++byteOffset;
		}
		return value;
	}

