	/**
	 * @see IndexBlock#nextEntry
	 */
	public boolean nextEntry(WordEntry entry) {
		try {
			int off= this.offset;
			int byteLen= field.getUInt2(off);
			if (byteLen == 0)
				return false;
			char[] word= field.getUTF(off);
			off += byteLen + 2;
			entry.reset(word);
			int n= field.getInt4(off);
			off += 4;
			for (int i= 0; i < n; ++i) {
				int ref= field.getInt4(off);
				off += 4;
				entry.addRef(ref);
			}
			this.offset= off;
			return true;
		} catch (UTFDataFormatException e) {
			return false;
		}
	}

