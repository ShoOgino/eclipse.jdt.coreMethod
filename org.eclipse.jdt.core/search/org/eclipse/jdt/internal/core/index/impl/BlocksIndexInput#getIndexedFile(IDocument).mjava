	/**
	 * @see IndexInput#getIndexedFile
	 */
	public IndexedFile getIndexedFile(IDocument document)
		throws java.io.IOException {
		setFirstFile();
		String name = document.getName();
		while (hasMoreFiles()) {
			IndexedFile file = getCurrentFile();
			String path = file.getPath();
			if (path.equals(name))
				return file;
			moveToNextFile();
		}
		return null;
	}

